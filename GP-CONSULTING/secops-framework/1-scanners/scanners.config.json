{
  "scanners": {
    "tfsec": {
      "enabled": true,
      "minimum_severity": "MEDIUM",
      "exclude_rules": []
    },
    "checkov": {
      "enabled": true,
      "frameworks": ["terraform", "kubernetes"],
      "skip_checks": []
    },
    "bandit": {
      "enabled": true,
      "confidence_level": "LOW",
      "severity_level": "LOW"
    },
    "trivy": {
      "enabled": true,
      "severity": ["HIGH", "CRITICAL"],
      "ignore_unfixed": false
    },
    "gitleaks": {
      "enabled": true,
      "verbose": true
    },
    "semgrep": {
      "enabled": true,
      "config": "auto"
    },
    "opa": {
      "enabled": true,
      "policy_dir": "../../policies/"
    }
  },
  "output": {
    "directory": "../2-findings/raw/",
    "format": "json"
  },
  "thresholds": {
    "critical": 0,
    "high": 10,
    "medium": 50
  }
}
